# ------------------------------------------------------------
# weight.py ‚Äî Analytics Module for Student Grade Management
# ------------------------------------------------------------
# Features:
#   ‚úÖ Compute weighted grades for each student (NumPy optimized)
#   ‚úÖ Show grade distributions (A-F)
#   ‚úÖ Show top/bottom 10% (percentiles)
#   ‚úÖ Detect grade outliers (¬±2 SD)
#   ‚úÖ Show improvement (Final - Midterm)
#
# Author: [Your Name]
# ------------------------------------------------------------

import csv
import os
import numpy as np

# ------------------------------------------------------------
# CONFIG
# ------------------------------------------------------------
FILENAME = "ano.csv"

QUIZ_WEIGHT = 0.20
MIDTERM_WEIGHT = 0.30
FINAL_WEIGHT = 0.40
ATTENDANCE_WEIGHT = 0.10


# ------------------------------------------------------------
# Helper ‚Äî Compute weighted grade for one row
# ------------------------------------------------------------
def compute_weighted(row):
    """Return weighted grade given a student's record row (NumPy version)."""
    try:
        # ‚úÖ Convert quiz scores to float, ignoring None
        quizzes = [
            float(row[f"quiz{i}"])
            for i in range(1, 6)
            if row[f"quiz{i}"] not in ("", "None", None)
        ]
        quizzes = np.array(quizzes, dtype=float)

        midterm = (
            float(row["midterm"]) if row["midterm"] not in ("", "None", None) else np.nan
        )
        final = (
            float(row["final"]) if row["final"] not in ("", "None", None) else np.nan
        )
        attendance = (
            float(row.get("attendance_percent", 0))
            if row.get("attendance_percent") not in ("", "None", None)
            else np.nan
        )

        # ‚úÖ Use nanmean to safely average even with NaN values
        avg_quiz = np.nanmean(quizzes) if quizzes.size > 0 else np.nan
        components = np.array(
            [avg_quiz, midterm, final, attendance], dtype=float
        )

        weights = np.array(
            [QUIZ_WEIGHT, MIDTERM_WEIGHT, FINAL_WEIGHT, ATTENDANCE_WEIGHT], dtype=float
        )

        # ‚úÖ Handle missing (NaN) values gracefully
        if np.isnan(components).all():
            return None  # all missing
        components = np.nan_to_num(components, nan=0.0)

        weighted = np.dot(components, weights)
        return round(float(weighted), 2)

    except Exception:
        return None


# ------------------------------------------------------------
# Main Analytics Functions
# ------------------------------------------------------------
def compute_grades(filename=FILENAME):
    """Compute and display weighted grades for all students."""
    if not os.path.exists(filename):
        print("‚ö†Ô∏è File not found.")
        return

    with open(filename, "r", encoding="utf-8") as f:
        reader = csv.DictReader(f)
        print("\nüìò Weighted Grades:")
        print("-" * 50)
        print(f"{'ID':<10}{'Name':<20}{'Weighted Grade':>15}")
        print("-" * 50)

        for row in reader:
            grade = compute_weighted(row)
            name = f"{row['last_name']}, {row['first_name']}"

            grade_display = f"{grade:.2f}" if grade is not None else "N/A"
            print(f"{row['student_id']:<10}{name:<20}{grade_display:>15}")

        print("-" * 50)


def grade_distribution(filename=FILENAME):
    """Compute grade distribution (A‚ÄìF) using NumPy."""
    if not os.path.exists(filename):
        print("‚ö†Ô∏è File not found.")
        return

    with open(filename, "r", encoding="utf-8") as f:
        reader = csv.DictReader(f)
        grades = np.array(
            [compute_weighted(r) for r in reader if compute_weighted(r) is not None],
            dtype=float,
        )

    bins = {
        "A": np.sum(grades >= 90),
        "B": np.sum((grades >= 80) & (grades < 90)),
        "C": np.sum((grades >= 70) & (grades < 80)),
        "D": np.sum((grades >= 60) & (grades < 70)),
        "F": np.sum(grades < 60),
    }

    print("\nüìä Grade Distribution:")
    for k, v in bins.items():
        print(f"{k}: {v}")


def percentiles(filename=FILENAME):
    """Show top and bottom 10% students using NumPy."""
    if not os.path.exists(filename):
        print("‚ö†Ô∏è File not found.")
        return

    with open(filename, "r", encoding="utf-8") as f:
        reader = list(csv.DictReader(f))

    results = np.array(
        [(r["student_id"], compute_weighted(r)) for r in reader if compute_weighted(r) is not None],
        dtype=object,
    )

    if results.size == 0:
        print("‚ö†Ô∏è No valid grades to compute percentiles.")
        return

    # Sort by grade descending
    results = results[np.argsort(results[:, 1].astype(float))[::-1]]
    n = len(results)
    top = results[: max(1, n // 10)]
    bottom = results[-max(1, n // 10) :]

    print("\nüèÖ Top 10% Students:")
    for sid, g in top:
        print(f"{sid}: {float(g):.2f}")

    print("\nüìâ Bottom 10% Students:")
    for sid, g in bottom:
        print(f"{sid}: {float(g):.2f}")


def outliers(filename=FILENAME):
    """Detect grades ¬±2 SD from mean (NumPy)."""
    if not os.path.exists(filename):
        print("‚ö†Ô∏è File not found.")
        return

    with open(filename, "r", encoding="utf-8") as f:
        reader = list(csv.DictReader(f))

    grades, ids = [], []
    for r in reader:
        g = compute_weighted(r)
        if g is not None:
            grades.append(float(g))
            ids.append(r["student_id"])
        else:
            print(f"‚ö†Ô∏è Skipping invalid record: {r['student_id']}")

    if len(grades) < 2:
        print("‚ö†Ô∏è Not enough data.")
        return

    grades = np.array(grades, dtype=float)
    mean = np.mean(grades)
    stdev = np.std(grades)

    print(f"\nüìä Mean = {mean:.2f}, SD = {stdev:.2f}")
    print("üö® Outliers (¬±2 SD from mean):")

    found = False
    for sid, g in zip(ids, grades):
        if abs(g - mean) > 1.5 * stdev:
            print(f"  {sid}: {g:.2f}")
            found = True
    if not found:
        print("  None found.")



def improvement(filename=FILENAME):
    """Compare midterm and final using NumPy."""
    if not os.path.exists(filename):
        print("‚ö†Ô∏è File not found.")
        return

    mids, finals, ids = [], [], []

    with open(filename, "r", encoding="utf-8") as f:
        reader = csv.DictReader(f)
        for r in reader:
            try:
                mid = float(r["midterm"]) if r["midterm"] not in ("", "None", None) else np.nan
                fin = float(r["final"]) if r["final"] not in ("", "None", None) else np.nan
                mids.append(mid)
                finals.append(fin)
                ids.append(r["student_id"])
            except:
                continue

    mids = np.array(mids, dtype=float)
    finals = np.array(finals, dtype=float)
    diffs = finals - mids

    print("\nüìà Improvement (Final - Midterm):")
    for sid, diff in zip(ids, diffs):
        if not np.isnan(diff):
            print(f"{sid}: {'+' if diff >= 0 else ''}{diff:.2f}")
